{
  "$schema": "http://json-schema.org/schema#",
  "title": "Yeep Configuration",
  "type": "object",
  "required": ["baseUrl", "jwt", "mongo", "storage"],
  "properties": {
    "baseUrl": {
      "type": "string",
      "format": "uri",
      "description": "Server base url"
    },
    "jwt": {
      "type": "object",
      "required": ["type","secret"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["hmac"]
        },
        "secret": {
          "type": "string",
          "minLength": 8
        }
      },
      "description": "JWT configuration object"
    },
    "mongo": {
      "type": "object",
      "required": [
        "uri"
      ],
      "properties": {
        "uri": {
          "type": "string",
          "format": "uri"
        }
      },
      "description": "Mongo configuration object"
    },
    "port": {
      "type": "number",
      "minimum": 0,
      "maximum": 65535
    },
    "storage": {
      "type": "object",
      "required": ["type","uploadDir"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["fs","s3","gcs"]
        },
        "uploadDir": {
          "type": "string"
        }
      },
      "description": "Storage configuration object"
    },
    "mail": {
      "type": "object",
      "properties": {
        "options": {
          "type": "object",
          "properties": {
            "port": {
              "type": "number"
            },
            "auth": {
              "type": "object",
              "properties": {
                "api_key": {
                  "type": "string"
                },
                "domain": {
                  "type": "string"
                },
                "user": {
                  "type": "string"
                },
                "pass": {
                  "type": "string"
                }
              }
            },
            "apiVersion": {
              "type": "string"
            },
            "accessKeyId": {
              "type": "string"
            },
            "secretAccessKey": {
              "type": "string"
            },
            "region": {
              "type": "string"
            }
          }
        },
        "from": {
          "type": "string",
          "format": "email"
        },
        "templatePath": {
          "type": "string",
          "format": "uri"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "transport": { "enum": ["smtp", "sendgrid", "mailgun", "ses"]}
            }
          },
          "then": {
            "required": ["options"]
          }
        },
        {
          "if": {
            "properties": {
              "transport": { "enum": ["sendgrid"]}
            }
          },
          "then": {
            "properties": {
              "options": {
                "required": ["auth"],
                "properties": {
                  "auth": {
                    "required": ["api_key"]
                  }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "transport": { "enum": ["smtp"]}
            }
          },
          "then": {
            "properties": {
              "options": {
                "required": ["auth", "host", "port"],
                "properties": {
                  "auth": {
                    "required": ["user", "pass"]
                  },
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "transport": { "enum": ["ses"]}
            }
          },
          "then": {
            "properties": {
              "options": {
                "required": ["apiVersion", "accessKeyId", "secretAccessKey", "region"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "transport": { "enum": ["mailgun"]}
            }
          },
          "then": {
            "properties": {
              "options": {
                "required": ["auth"],
                "properties": {
                  "auth": {
                    "required": ["api_key", "domain"]
                  }
                }
              }
            }
          }
        },
      ]
    }
  }
}
